---
import type { CardGroupType } from '@checkpoint/shared-types';

interface Props {
  data: CardGroupType;
}

const { data } = Astro.props as Props;

const getBackgroundCard = (style: string) => {
  switch (style) {
    case 'none':
    return 'bg-base-100 text-base-content';
    case '1':
      return 'bg-base-200 text-base-content';
    case '2':
      return 'bg-secondary text-secondary-content';
    case '3':
      return 'bg-primary text-primary-content';
    case '4':
      return 'bg-primary text-primary-content';
    case '5':
      return 'bg-base-200 text-base-content';
    default:
      return 'bg-base-100 text-base-content';
  }
};

const getTitleBackground = (style: string) => {
  switch (style) {
    case 'none':
      return 'bg-base-100 text-base-content';
    case '1':
      return 'bg-secondary';
    case '2':
      return 'bg-base-100 text-base-content';
    case '3':
      return 'bg-base-100 text-base-content';
    case '4':
      return 'bg-secondary text-secondary-content';
    case '5':
      return 'bg-base-100 text-base-content';
    default:
      return 'bg-base-100 text-base-content';
  }
};

const getButtonStyle = (style: string) => {
  switch (style) {
    case 'none':
      return { circle: 'fill-primary', path: 'fill-secondary' };
    case '1':
      return { circle: 'fill-primary', path: 'fill-secondary' };
    case '2':
      return { circle: 'fill-primary', path: 'fill-secondary' };
    case '3':
      return { circle: 'fill-base-100', path: 'fill-primary' };
    case '4':
      return { circle: 'fill-base-100', path: 'fill-primary' };
    case '5':
      return { circle: 'fill-primary', path: 'fill-secondary' };
    default:
      return { circle: 'fill-primary', path: 'fill-secondary' };
  }
};
---

<section class="px-24 flex flex-col gap-16">
  <div class="flex gap-10 items-center">
    <h2 class={`max-w-1/3`}>{data.headline}</h2>
    <p class="text-balance w-2/5">{data.content}</p>
  </div>
  <div>
    <div class="grid grid-cols-2 gap-8">
      {
        data.cardgroup_cards.map((card) => {
          const { circle, path } = getButtonStyle(card.card_style);
          return (
            <div
              class={`w-full h-[310px] border-2 flex p-12 gap-10 rounded-box border-b-6 justify-between ${getBackgroundCard(card.card_style)}`}
            >
              <div
                class={`${card.image ? 'w-2/5' : 'w-full'} flex flex-col ${card.content ? 'gap-5' : 'justify-between'}`}
              >
                <span
                  class={`text-3xl ${getTitleBackground(card.card_style)} font-medium inline-block max-w-full p-1`}
                >
                  {card.headline}
                </span>
                {card.content ? (
                    <hr>
                    <p>{card.content}</p>
                ) : null}
                {card.link ? (
                  <a href={card.link} class="flex gap-4 items-center group">
                    <div class="size-10">
                      <svg
                        width="100%"
                        height="100%"
                        viewBox="0 0 41 41"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <circle cx="20.5" cy="20.5" r="20.5" class={circle} />
                        <path
                          d="M11.25 24.701C10.5326 25.1152 10.2867 26.0326 10.701 26.75C11.1152 27.4674 12.0326 27.7133 12.75 27.299L11.25 24.701ZM30.7694 16.3882C30.9838 15.588 30.5089 14.7655 29.7087 14.5511L16.6687 11.0571C15.8685 10.8426 15.046 11.3175 14.8316 12.1177C14.6172 12.9179 15.0921 13.7404 15.8923 13.9548L27.4834 17.0607L24.3776 28.6518C24.1631 29.452 24.638 30.2745 25.4382 30.4889C26.2384 30.7033 27.0609 30.2284 27.2753 29.4282L30.7694 16.3882ZM12.75 27.299L30.0705 17.299L28.5705 14.701L11.25 24.701L12.75 27.299Z"
                          class={path}
                        />
                      </svg>
                    </div>
                    <span class={`text-xl block ${getBackgroundCard(card.card_style)} relative after:absolute after:bottom-0 after:left-1/2 after:h-0.5 after:w-0 after:bg-current after:transition-all after:duration-300 group-hover:after:left-0 group-hover:after:w-full`}>
                      Learn More
                    </span>
                  </a>
                ) : null}
              </div>
              {card.image?.filename_disk ? (
                <div class="w-1/2 flex items-center justify-center">
                  <img src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${card.image.filename_disk}`} alt="" class="w-full object-contain" />
                </div>
              ):null}
            </div>
          );
        })
      }
    </div>
  </div>
</section>
